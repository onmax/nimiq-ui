{
  "name": "nimiq-ui",
  "type": "module",
  "version": "1.0.0-beta.41",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "nr -r build",
    "dev": "nr -r dev",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "prepublishOnly": "nr build",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "release": "bumpp -r && pnpm -r publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@antfu/ni": "catalog:dev",
    "@types/node": "catalog:types",
    "@unocss/eslint-config": "catalog:lint",
    "@unocss/eslint-plugin": "catalog:lint",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "eslint-plugin-format": "catalog:lint",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "rimraf": "catalog:node",
    "simple-git-hooks": "catalog:lint",
    "typescript": "catalog:dev",
    "unbuild": "catalog:build",
    "vite": "catalog:build",
    "vitest": "catalog:test"
  },
  "pnpm": {
    "patchedDependencies": {
      "@nolebase/vitepress-plugin-git-changelog": "patches/@nolebase__vitepress-plugin-git-changelog.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "nr lint:fix"
  }
}
